//paddigs ----------------------------------------------
for num in 1..10
	.pb-{num * 10}
		padding-bottom: num * 10px
	.pt-{num * 10}
		padding-top: num * 10px
	.pt-{num * 10}-im
		padding-top: num * 10px !important
	.p-{num * 10}
		padding: num * 10px
	.pt-{num * 1}-5p
		padding-top: num * 1.5%
.no-pad
	&-xs
		padding 0 
		+from-width(5)
			padding-left 1rem
			padding-right 1rem
// positions --------------------------------------------
.rel
	position relative
.zi
	&-1
		z-index 1
	&-2
		z-index 2
		
// display --------------------------------------------
.hide
	display none
// text --------------------------------------------
.title
	&--home
		color white
		font-family $gotham-book
		text-shadow 0 2px 24px rgba(0,0,0,0.5)
		font-size 20px
		line-height 35px
		text-align center
		+from-width(5)
			font-size 25px
			letter-spacing 7px
			line-height 42px
			text-align left
		+from-width(6)
			font-size 33px
			line-height 58px
		+from-width(7)
			font-size 35px
			letter-spacing 10px
		
		span
			display block
			&.apellido_pastilla
				font-family $gotham-light
				font-weight 300
				line-height 25px
	&--section
		font-size 15px
		letter-spacing 2.5px
		line-height 18px
		text-align center
		width 100%
		margin-bottom 15px
		text-transform uppercase
		font-weight 400
		padding 20px 0
		+from-width(5)
			font-size 25px
			letter-spacing 8px
			line-height 42px
		&.h1
			font-size 17px
			font-weight 500
			+from-width(5)
				font-size 28px
			&:after
				content ''
				border-bottom 1px solid black
				display block
				width 50px
				margin-left calc(50% - 25px)
				margin-top 5px
				+from-width(5)
					width 4%
					margin-left calc(50% - 2%)	
		// &.no-line
		// 	&:after
		// 		display none	
	&--booking
		text-transform uppercase
		font-weight 500
		letter-spacing 3px
		text-align center
		font-size 20px
		padding 1rem 0
	&--popup
		text-transform uppercase
		color white
		font-size 20px
		letter-spacing 2.5px
		font-weight 500
		padding 20px 0
		text-align center
		+from-width(5)
			letter-spacing 5px
.main-section
	&--descr
		width 90%
		margin 0 auto
		padding 20px 0
		text-align justify
		+from-width(5)
			width 60%
			padding 16px 0 50px
			text-align center	
// backgrounds --------------------------------------------
.backgrounds
	background-position center top !important
	background-repeat no-repeat !important
	background-size cover !important
	min-height 100%
	
.gradient
	// background-color: #000000
	background-size cover
	position absolute
	height 100%
	width 100%
	left 0
	top 0
	z-index 1
	&-menu
		+from-width(5)
			background: linear-gradient(0deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.95) 100%);
			height 100px
			width 100%
			transform translateY(100px)
			opacity .2
			position fixed
			z-index 2
	&-home
		background: linear-gradient(270deg, rgba(255,255,255,0) 0%, rgba(0,0,0,0.19) 100%), linear-gradient(180deg, rgba(255,255,255,0.34) 0%, rgba(0,0,0,0.35) 100%);
		height 100%
		width 100%
		position absolute
		left 0
		top 0
		z-index 1
	&-card-shadow
		+from-width(4)
			background: radial-gradient(35% 45% at center, rgb(0, 0, 0) -70%, rgba(255, 255, 255, 0) 155%);
			height: 35px;
			width: 60%
			position: absolute;
			bottom: -14px;
			left: 50%;
			transform: translateX(-50%);
			filter: blur(5px);
		&-over
			background: linear-gradient(0deg, rgba(255,207,123,0) 0%, rgba(0,0,0,0.5) 100%);
			width 100%
			height 100%
			position absolute
			left 0
			top 0
			z-index 1
		&-darkfull
			background-color rgba(50,57,65,0.8)
			width 100%
			height 100%
			position absolute
			left 0
			top 0
			z-index 1
		&-vertical
			background: radial-gradient(35% 45% at center, #000 0%, rgba(255,255,255,0) 100%);
			width: 35px;
			height: 60%;
			position: absolute;
			right: -14px;
			top: 50%;
			z-index: 1;
			transform: translateY(-50%);
			filter: blur(5px);
		&-inside
			+from-width(5)
				background radial-gradient(circle, rgba(0,0,0,0.74) 0%, rgba(255,255,255,0) 100%)
				height: 30px;
				width: 40%
				position: absolute;
				bottom: -15px;
				left: 50%;
				transform: translateX(-50%);
				filter: blur(15px);
	&-popup
		&-dark
			background linear-gradient(0deg, rgba($gray-32,.9) 100%, rgba($gray-32,.9) 100%)
	&-after
		&:after
			content ''
			background rgba(gray, 0.45)
			width 100%
			height 100%
			position absolute
			left 0
			top 0	
		&-strong
			&:after
				content ''
				width 100%
				height 100%
				position absolute
				left 0
				top 0	
				background rgba(gray, 0.6)
			
//divisor --------------------------------------------
.divisor
	width 100%
	height 40px
	+from-width(5)
		height 65px
	&-intern
		height 120px
		+from-width(5)
			height 220px
//viewmore --------------------------------------------
.view_more
	.morelink 
		text-decoration:underline;
		outline: none;
		font-weight 500
	.morecontent 
		span
			display: none;
			transition: all .25s ease
//list 
.li-diamond
	position relative
	&:before
		content: '';
		height: 8px
		width: 8px
		background: white
		display: block;
		position: absolute;
		transform: rotate(45deg) translateY(-50%)
		top: 50%
		left: -15px
		border-radius 1.5px
		+from-width(4)
			left -20px
		+from-width(5)
			left: -25px