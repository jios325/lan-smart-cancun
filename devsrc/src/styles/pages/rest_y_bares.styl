.main-section
	&__rest_y_bares
		&--exclusivos
			&--container
				background url('../img/habitaciones/bkgr-habitaciones.jpg') center no-repeat
				.rest--exclusivos
					&--container
						padding 80px 0 20px
						.costo-adicional
							padding-top 25px
							width 100%
							text-align center
							+from-width(5)
								text-align left
							span
								font-size 12px
								line-height 14px
								letter-spacing 1px
								font-weight 700
								i.costo
									circle_img(30px, 30px, 2px, 0, 0)
									background $gray-32
									display inline-block
									vertical-align middle
									&:before
										content '$'
										display block
										color white
										font-size 18px
										line-height 30px
										font-style normal
										font-weight 400
										padding 0 9px
										vertical-align middle			
					&--content
						+from-width(5)
							display flex
							flex-flow row
							flex-wrap wrap
							justify-content center
							align-items center
							position relative
							&:before
								content ''
								display inline-block
								background: radial-gradient(35% 45% at center, rgb(0, 0, 0) -70%, rgba(255, 255, 255, 0) 155%);
								height: 35px;
								width: 60%
								position: absolute;
								bottom: -14px;
								left: 50%;
								transform: translateX(-50%);
								filter: blur(5px);
							&:after
								content: '';
								background: radial-gradient(85% 50% at center, rgba(0, 0, 0, 0.77) 0%, #fff0 100%);
								display: inline-block;
								width: 100%;
								height: 100%;
								position: absolute;
								overflow: hidden;
								filter: blur(5px)
								z-index 1
					&--item
						flex-basis 100%
						max-width 100%
						position relative
						+from-width(5)
							min-height 280px
							flex-basis 25%
							max-width 25%
						+from-width(6)
							min-height 320px
						&--content
							position relative
							+from-width(5)
								position absolute
								left 0
								top 0
								width 100%
								height 100%
								display flex
								flex-flow row
								flex-wrap wrap
								justify-content center
								align-items center
							.img-logo
								position absolute
								left 50%
								top 50%
								transform translate(-50%,-50%)
								z-index 2
								max-width 60%
								flex-basis 60%
								text-align center
							.img-background
								height: 100%;
								width: 100%;
								object-fit: cover;
								display: block;
								flex-shrink: 0;
								+from-width(5)
									position: absolute;
									top 0
									left 0
		&--cards
			display flex
			flex-flow row
			flex-wrap wrap
			justify-content center
			align-items center
			overflow hidden							
			&--item
				flex-basis 100%
				max-width 100%
				min-height 230px
				max-height 230px
				+from-width(5)
					min-height 320px
					max-height 320px
					flex-basis 25%
					max-width 25%
					position: relative;
					overflow: hidden;
