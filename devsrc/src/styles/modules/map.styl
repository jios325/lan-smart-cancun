.map-container
	&--item
		.insert-map
			position absolute
		.message_click
			width 100%
			height 100%
			position absolute
			background rgba($gray-32,.1) 
			min-height 460px
			visibility hidden 
			text-align center
			transition background 0.5s
			span
				position absolute
				left 50%
				top 50%
				transform translate(-50%,-50%)
				color white
				font-family $raleway
				text-transform uppercase
				letter-spacing 1px
				font-size 25px
				width 80%
				margin 0 auto
				text-align center
		.embed-container
			padding 0
			min-height 300px
			+from-width(5)
				min-height 500px
			.map-container_info_hotel
				max-width 239px
				font-family $josefin
				h3
					text-align left
					font-size 12px
					line-height 40px
					border-bottom 1px solid #979797
					text-transform uppercase
					font-weight 600
					letter-spacing 1px
					text-align center
				p
					font-size 12px
					padding 20px 0 0
					font-weight 400
					letter-spacing .8px
		&:hover
			.message_click
				visibility visible
				background rgba($gray-32,.5)
		
		