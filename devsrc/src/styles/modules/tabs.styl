.tabs
	&-image
		&--container
			display flex
			flex-flow row
			flex-wrap wrap
			align-items center
			justify-content center
		&--item
			flex-basis 100%
			max-width 100%
			+from-width(5)
				flex-basis 50%
				max-width 50%
				&:first-child
					padding-right 9px
				&:last-child
					padding-left 9px
			&-container
				position relative
				&:after
					content ''
					background rgba(gray, 0.45)
					width 100%
					height 100%
					position absolute
					left 0
					top 0
			&-content
				position relative
				display flex
				flex-flow row
				flex-wrap wrap
				align-items center
				justify-content center
				text-align center
				z-index 1
				color white
				padding 40px 0 20px
				margin 10px 0 
				+from-width(5)
					padding 60px 0 40px
					margin 0 
				h3
					text-transform uppercase
					font-size 18px
					letter-spacing 3.5px
					font-weight 400
					flex-basis 100%
					max-width 100%
					+from-width(4)
						font-size 25px
						letter-spacing 5px
				.tabs-icon
					flex-basis 100%
					max-width 100%
					padding 35px 0
				a.btn
					flex-basis 50%
					max-width 150px
					line-height 32px
					height 32px
					&:hover
						background white
						
			&.restaurantes
				.tabs-image--item-container
					background url('../img/rest_y_bares/restaurante.jpg') center no-repeat
			&.bares
				.tabs-image--item-container
					background url('../img/rest_y_bares/bar.jpg') center no-repeat		
			