.select
	position relative
	label
		&:after
			content '\e017'
			font-family $oasis-font
			display: block;
			position: absolute;
			color: $gray-3e;
			top: 0;
			right: 10px;
			font-size: 16px;
			line-height: 45px;
			z-index: 100;
			pointer-events: none;		
	&.inline
		display inline-block
		label
			line-height 45px
			vertical-align middle
label
	&:focus
		outline none

.form-group
	margin-bottom: 20px
	position relative
	&__booking
		&.date input
			font-family: 'Muli'
			line-height 16px
			letter-spacing: 0.1px
	.form__label
		display block
		line-height: 25px
		text-align: left
		color:#959595
		font-weight: 300
		font-family: $raleway
		font-size: 13.5px
		text-transform: capitalize
		&--nowrap
			white-space: nowrap
		&.required
			&:before
				content:'*'
				color:#000
				font-size: 26px
				vertical-align: middle 
	select
		border-radius 0
	.select
		label
			&:after
				top 42%
input[type="time"]
	&.form-control--events
		position relative
		&:before
			content: '\e013'
			font-family: oasis-fonts
			font-size: 18px
			padding-right: 10px
			color: #959595
			font-weight: 200
.form-control
	&--events
		height 35px
		line-height: 35px
		width 100%
		border 1px solid #959595
		background-color #FEFEFE
		box-shadow inset 0 1px 3px 0 rgba(10,10,10,0.09)
		padding-left: 20px
		padding-right: 20px
		color #959595
		font-family Raleway
		font-size 14px
		
.input-group	
	display table
	width 100%
	border-collapse separate
	&__add
		display: table-cell
		vertical-align: top
		box-sizing border-box
		border-right 0px
		border-left: 0px
		width: 50px
		text-align: center
		span
			line-height 35px